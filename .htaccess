<IfModule mod_rewrite.c>
	RewriteEngine On

	# если будут изменения, их нужно отразить в merchant.webmoney.ru - настройка кошелька

	RewriteCond %{HTTP_HOST} motokofr.ru
	RewriteRule (.*) http://motokofr.com/$1 [R=301,L]
	
	RewriteCond %{HTTP_HOST} www.motokofr.com
	RewriteRule (.*) http://motokofr.com/$1 [R=301,L]

    RewriteCond %{HTTPS} off
    RewriteCond %{HTTP:X-Forwarded-Proto} !https
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

</IfModule>

<ifModule mod_deflate.c>
	AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</ifModule>

<IfModule mod_expires.c>
    ExpiresActive On
#    ExpiresDefault "access plus 2 hour" 
    
    ExpiresByType application/javascript "access 0 second"
    ExpiresByType text/javascript "access 0 second"
    ExpiresByType text/css "access 1 week"
    ExpiresByType image/gif "access 6 month"
    ExpiresByType image/jpeg "access 1 week"
    ExpiresByType image/png "access 6 month"
    ExpiresByType image/icon "access 6 month"

    <FilesMatch "\.(js|css|svg|svgz|eot|otf|woff|mp4|rss|atom|jpg|jpeg|gif|png|ico|zip|tgz|gz|rar|wav|bmp)$">
        Header set Cache-Control  "max-age=86400, must-revalidate"
#        ExpiresDefault "access plus 60 second" 
        Header append Cache-Control "no-cache"
    </FilesMatch>
</IfModule>

ServerSignature Off

# Catch 40x errors
ErrorDocument 404 /404.php
ErrorDocument 403 /404.php

<Files 403.shtml>
order allow,deny
allow from all
</Files>

